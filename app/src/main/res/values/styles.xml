<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/snow</item>
        <item name="tabBackground">@color/snow</item>
        <item name="tabIndicatorHeight">@dimen/_2dp</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/TextContent.BM.SemiBold</item>
        <item name="tabTextColor">@color/silver</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="TabLayout.Full">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingTop">@dimen/_0dp</item>
        <item name="tabPaddingBottom">@dimen/_6dp</item>
    </style>

    <style name="TabLayout.Full.Primary">
        <item name="tabIndicatorColor">@color/orange50</item>
    </style>

    <style name="TabLayout.Full.Primary.Small">
        <item name="android:layout_height">@dimen/_26dp</item>
        <item name="tabTextAppearance">@style/TextContent.BM.SemiBold</item>
    </style>

    <style name="TabLayout.Full.Primary.Medium">
        <item name="android:layout_height">@dimen/_30dp</item>
        <item name="tabTextAppearance">@style/TextContent.BL.SemiBold</item>
    </style>

    <style name="TabLayout.Full.Primary.Large">
        <item name="android:layout_height">@dimen/_38dp</item>
        <item name="tabTextAppearance">@style/TextContent.H5.SemiBold</item>
    </style>


    <!-- Text -->
    <style name="TextContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/proxima_light</item>
        <item name="android:lineSpacingExtra">@dimen/_0sp</item>
    </style>

    <style name="TextContent.H1">
        <item name="android:textSize">@dimen/_44sp</item>
    </style>

    <style name="TextContent.H1.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H1.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.H2">
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:lineSpacingExtra">@dimen/_0sp</item>
    </style>

    <style name="TextContent.H2.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H2.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.H3">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:lineSpacingExtra">@dimen/_2sp</item>
    </style>

    <style name="TextContent.H3.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H3.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.H4">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:lineSpacingExtra">@dimen/_3sp</item>
    </style>

    <style name="TextContent.H4.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H4.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.H5">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:lineSpacingExtra">@dimen/_5sp</item>
    </style>

    <style name="TextContent.H5.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H5.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.H6">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:lineSpacingExtra">@dimen/_3sp</item>
    </style>

    <style name="TextContent.H6.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.H6.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.BL">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lineSpacingExtra">@dimen/_2sp</item>
    </style>

    <style name="TextContent.BL.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.BL.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.BM">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:lineSpacingExtra">@dimen/_1sp</item>
    </style>

    <style name="TextContent.BM.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.BM.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.BS">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextContent.BS.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.BS.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="TextContent.BXS">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:lineSpacingExtra">@dimen/_2sp</item>
    </style>

    <style name="TextContent.BXS.SemiBold">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="TextContent.BXS.Bold">
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <!-- Button Fill -->
    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/TextContent.BM.Bold</item>
        <item name="android:minWidth">@dimen/_200dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_44dp</item>
        <item name="android:textColor">@drawable/selector_text_white</item>
        <item name="cornerRadius">@dimen/_8dp</item>

        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/_18sp</item>
        <item name="iconTint">@drawable/selector_text_white</item>
        <item name="iconPadding">@dimen/_8dp</item>

        <item name="android:insetLeft">@dimen/_0dp</item>
        <item name="android:insetRight">@dimen/_0dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
    </style>

    <!-- Button Fill Primary -->
    <style name="Button.Primary" parent="Button">
        <item name="backgroundTint">@drawable/selector_button_primary</item>
    </style>


    <!-- Card -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_8dp</item>
    </style>

    <style name="CardView.0" parent="CardViewStyle">
        <item name="cardElevation">@dimen/_0dp</item>
    </style>

    <style name="CardView.2" parent="CardView.0">
        <item name="cardElevation">@dimen/_2dp</item>
    </style>

    <style name="CardView.4" parent="CardView.0">
        <item name="cardElevation">@dimen/_4dp</item>
    </style>

    <style name="CardView.8" parent="CardView.0">
        <item name="cardElevation">@dimen/_8dp</item>
    </style>

    <style name="CardView.16" parent="CardView.0">
        <item name="cardElevation">@dimen/_16dp</item>
    </style>

    <style name="CardView.24" parent="CardView.0">
        <item name="cardElevation">@dimen/_24dp</item>
    </style>
</resources>